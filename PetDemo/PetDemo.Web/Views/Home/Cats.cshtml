@model CatViewModel

@{
    ViewData["Title"] = "Sorted list of Cats' names by their owners' Gender";
}

@if (Model.NoResult)
{
    <h2>No result found</h2>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <h3>Male</h3>
            <ul>
                @foreach (var name in Model.MaleOwnedCats)
                {
                    <li>@name</li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Female</h3>
            <ul>
                @foreach (var name in Model.FemaleOwnedCats)
                {
                    <li>@name</li>
                }
            </ul>
        </div>
    </div>
}


