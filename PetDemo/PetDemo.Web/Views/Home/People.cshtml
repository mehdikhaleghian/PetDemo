@model PeopleViewModel

@{
    ViewData["Title"] = "List of people and their pets";
}

<div class="row">
    <div class="col-md-6">
        <h3>Male</h3>
        <ul>
            @foreach (var name in Model.MaleOwnedAnimals)
            {
                <li>@name</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Female</h3>
        <ul>
            @foreach (var name in Model.FemaleOwnedAnimals)
            {
                <li>@name</li>
            }
        </ul>
    </div>
</div>
